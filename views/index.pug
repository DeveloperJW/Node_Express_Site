extends layout.pug

block content
    p#logo
        img(src='/static/images/Logo.png')
    article.grid-container.portfolio-intro
        div
            //- Add a title or heading like My Portfolio, or Hey, Potential Employers, or Let's make the web great together!
            h2.animated.lightSpeedIn.slower Welcome to My Portfolio

            //- Add a description for your portfolio, what this project is, it's purpose, what it's supposed to accomplish, etc.
            p.lead.text-light
                | I am experienced with JavaScript (ES6), HTML, CSS, DOM, Ajax, Node.js, Express, React and redux.
                | I also have experience with other programming languages and frameworks such as Java, Python, PHP, Django 2, Phaser.js.
    article.grid-container.portfolio-index

        .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
            each project,index in projects
                .cell
                    a(href=`/projects/${index}`)
                        img.thumbnail.showCase(src=project.image_urls[0])
                        h5=project.project_name
      
